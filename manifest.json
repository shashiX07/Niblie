{
  "manifest_version": 3,
  "name": "Viewport Word Counter",
  "version": "0.1.0",
  "description": "Counts words in the current viewport and displays in a draggable badge",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "modules/moduleLoader.js",
        "modules/wordCounter.js",
        "modules/ui.js",
        "modules/linkFinder.js",
        "modules/imageFinder.js",
        "modules/videoFinder.js",
        "modules/tableFinder.js",
        "modules/modal.js",
        "modules/adBlocker/platformDetector.js",
        "modules/adBlocker/storageManager.js",
        "modules/adBlocker/youtubeBlocker.js",
        "modules/adBlocker/spotifyBlocker.js",
        "modules/adBlocker/hotstarBlocker.js",
        "modules/adBlocker/webBlocker.js",
        "modules/adBlocker/blockerUI.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "index.html",
  "icons": {
    "48": "icon48.png"
  }
}